<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">

    <display-name>Restaurant</display-name>

    <servlet>
        <servlet-name>workers</servlet-name>
        <servlet-class>ua.goit.homework62.WorkersServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>workers</servlet-name>
        <url-pattern>/workers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>workerAddServlet</servlet-name>
        <servlet-class>ua.goit.homework62.WorkerAddServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>workerAddServlet</servlet-name>
        <url-pattern>/addWorker</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>deleteWorker</servlet-name>
        <servlet-class>ua.goit.homework62.WorkerDeleteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteWorker</servlet-name>
        <url-pattern>/deleteWorker</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>updateWorker</servlet-name>
        <servlet-class>ua.goit.homework62.WorkerUpdateServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>updateWorker</servlet-name>
        <url-pattern>/updateWorker</url-pattern>
    </servlet-mapping>
</web-app>